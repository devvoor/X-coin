# NETWORK
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# WALLETS
# Executor wallet: signs transactions (load via secret key OR keypair file path)
EXECUTOR_SECRET_KEY=
# OR
EXECUTOR_KEYPAIR_PATH=

# Fee collector wallet: receives creator fees (public key only, read-only)
FEE_COLLECTOR_PUBKEY=

# Token mint address for $x
TOKEN_MINT=

# STRATEGY
BUYBACK_PERCENT=50
ADS_PERCENT=50
BURN_PERCENT=0
LP_ADD_PERCENT=0

# RISK PARAMETERS
MAX_BUDGET_PER_EPOCH_USD=1000
MAX_SLIPPAGE_BPS=300
MAX_PRICE_IMPACT_BPS=500
MIN_INTERVAL_SECONDS=3600
MAX_AD_SPEND_PER_EPOCH_USD=500
REQUIRE_MANUAL_APPROVAL=true

# ADS ENGINE
# Options: dry-run | manual | api
ADS_ENGINE_MODE=dry-run
# Target post/tweet ID to promote (must be configured)
ADS_TARGET_POST_ID=
# X Ads API credentials (only needed if ADS_ENGINE_MODE=api)
X_ADS_API_KEY=
X_ADS_API_SECRET=
X_ADS_ACCOUNT_ID=

# EXECUTION
EPOCH_INTERVAL_SECONDS=3600
ENABLE_SCHEDULER=false

# SERVER
ENABLE_WEBHOOK=false
WEBHOOK_PORT=3000
WEBHOOK_SECRET=

# MONITORING
ENABLE_METRICS=true
METRICS_PORT=9090

# LOGGING
LOG_LEVEL=info
LOG_PRETTY=true

# CIRCUIT BREAKER
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=300000
